{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/server-root",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "importHelpers": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "Shared/*": ["../shared/*"]
    },
    "lib": ["es6"],
  },
  "include": ["./**/*", "../shared/**/*"]
}